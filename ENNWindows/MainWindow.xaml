<Window x:Class="ENNWindows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ENNWindows"
        mc:Ignorable="d"
        Title="ENN" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Right" Height="24" VerticalAlignment="Center" Orientation="Horizontal" Grid.Row="1" Margin="0,0,8,0">
            <Button Content="Quit" Margin="0,0,8,0" Width="60"/>
            <Button Content="Eval" Margin="0,0,8,0" Width="60"/>
            <Button Content="Stop" Margin="0,0,8,0" Width="60"/>
            <Button Content="Train" Margin="0,0,8,0" Width="60"/>
        </StackPanel>
        <TextBox TextWrapping="Wrap" Margin="16,16,16,0"/>
    </Grid>
</Window>
